pipeline {
    agent any

    stages {
        stage('Checkout Main Branch') {
            steps {
                checkout([
                    $class: 'GitSCM', 
                    branches: [[name: 'main']],
                    userRemoteConfigs: [[url: 'https://github.com/avishka2k/codeonline-infra.git', credentialsId: "github-token"]]
                ])
            }
        }

        stage('Checkout Config File') {
            steps {
                script {
                    def props = readProperties file: './configs.properties'
                    for (p in props) {
                        env."${p.key}" = "${p.value}"
                    }
                    
                    sh script: """
                        echo "----------------------------------------------"
                        echo "Values in Config files : 
                        $props.name "
                        echo "----------------------------------------------"
                    """
                }
                
                
            }
        }
    }

    post { 
        always { 
            deleteDir()
        }
    }
}